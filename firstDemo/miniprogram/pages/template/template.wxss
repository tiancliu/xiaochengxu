.read-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #fff;
  border: 1px solid #ededed;
  padding: 0 0 5rpx 0;
}
.author{
  margin: 10rpx 0 20rpx 10rpx
}
.author-img{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.author-text{
  margin-left: 20rpx;
  vertical-align: middle;
}
.title{
  font-size: 34rpx;
  color: #333;
  margin: 0 0 10px 10px;
}
.title-img{
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
}
.title-content{
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.read-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.read-like-img{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.read-like-text{
  vertical-align: middle;
  margin-right: 20px;
}